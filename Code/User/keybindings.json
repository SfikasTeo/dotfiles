// Place your key bindings in this file to override the defaults
[
  // Toggle between terminal and editor focus
  {
    "key": "ctrl+`",
    "command": "workbench.action.terminal.focus"
  },
  {
    "key": "ctrl+`",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "terminalFocus"
  },

  // Change the Defualt Keybindings to ctrl+alt+.
  {
    "key": "ctrl+alt+w",
    "command": "-workbench.action.closeWindow"
  },
  {
    "key": "ctrl+alt+w",
    "command": "workbench.action.terminal.killEditor",
    "when": "terminalEditorFocus && terminalFocus && terminalHasBeenCreated && resourceScheme == 'vscode-terminal' || terminalEditorFocus && terminalFocus && terminalProcessSupported && resourceScheme == 'vscode-terminal'"
  },
  {
    "key": "ctrl+alt+w",
    "command": "workbench.action.closeActiveEditor"
  },
  {
    "key": "ctrl+alt+o",
    "command": "workbench.action.files.openFolder",
    "when": "openFolderWorkspaceSupport"
  },
  {
    "key": "ctrl+alt+e",
    "command": "workbench.view.explorer",
    "when": "viewContainer.workbench.view.explorer.enabled"
  },
  {
    "key": "ctrl+alt+e",
    "command": "workbench.action.quickOpenNavigatePreviousInFilePicker",
    "when": "inFilesPicker && inQuickOpen"
  },
  {
    "key": "ctrl+alt+f",
    "command": "workbench.action.findInFiles"
  },
  {
    "key": "ctrl+alt+f",
    "command": "workbench.action.terminal.searchWorkspace",
    "when": "terminalFocus && terminalProcessSupported && terminalTextSelected"
  },
  {
    "key": "ctrl+alt+f",
    "command": "workbench.view.search",
    "when": "workbench.view.search.active && neverMatch =~ /doesNotMatch/"
  },
  {
    "key": "ctrl+alt+g",
    "command": "workbench.action.terminal.navigateAccessibleBuffer",
    "when": "terminalAccessibleBufferFocus && terminalHasBeenCreated || terminalAccessibleBufferFocus && terminalProcessSupported"
  },
  {
    "key": "ctrl+alt+g",
    "command": "workbench.view.scm",
    "when": "workbench.scm.active"
  },
  {
    "key": "ctrl+alt+d",
    "command": "workbench.view.debug",
    "when": "viewContainer.workbench.view.debug.enabled"
  },
  {
    "key": "ctrl+alt+x",
    "command": "workbench.view.extensions",
    "when": "viewContainer.workbench.view.extensions.enabled"
  },
  {
    "key": "alt+tab",
    "command": "editor.action.insertSnippet",
    "args": {
      "snippet": "\t"
    }
  },
  {
  "key": "j j",
  "command": "dance.modes.set.normal",
  "when": "editorTextFocus && !editorReadonly && dance.mode != 'normal'"
  },
  
]