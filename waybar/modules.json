{
    // Workspaces
    "hyprland/workspaces" : {
        "format": "{}",
        "persistent-workspaces": {
             "*": 4
        }       
    },

    // Active Hyprland Window
    "hyprland/window": {
      "separate-outputs": true
    },

    // Current Language
    "hyprland/language": {
        "format": "{}",
        "format-en": "US",
        "format-gr": "GR",
        "keyboard-name": "242bde0"
        // Find the device name with
        // hyprctl devices and search
        // for 'at-translated-set...'
        // or 'main: yes'
    },              

    // Power Menu
    "custom/exit": {
        "format": "",
        "on-click": "sh $HOME/.config/rofi/powermenu/powermenu.sh",
        "tooltip": false
    },

    // Backlight
    "backlight": {
        "interval": 30,
        "device": "intel_backlight",
        "format": "<span size='90%'>{icon}</span> {percent}%",
        "format-icons": ["󰌶", "󱠃", "󰌵"]    
    },

    // System tray
    "tray": {
        // "icon-size": 21,
        "spacing": 10
    },

    "clock": {
        "format": "<span size='130%'> </span>{:%a %d, %b %H:%M}",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
                    "mode"          : "month",
                    "mode-mon-col"  : 3,
                    "weeks-pos"     : "right",
                    "on-scroll"     : 1,
                    "on-click-right": "mode",
                    "format": {
                              "months":     "<span color='#a8afbd'><b>{}</b></span>",
                              "days":       "<span color='#a8afbd'><b>{}</b></span>",
                              "weeks":      "<span color='#b48ead'><b>W{}</b></span>",
                              "weekdays":   "<span color='#b48ead'><b>{}</b></span>",
                              "today":      "<span color='#b48ead'><b><u>{}</u></b></span>"
                              }
                    },
        "actions":  {
                    "on-click-right": "mode",
                    "on-click-forward": "tz_up",
                    "on-click-backward": "tz_down",
                    "on-scroll-up": "shift_up",
                    "on-scroll-down": "shift_down"
                    }
    },
    
    // CPU
    "cpu": {
        "format": "<span size='large'>󰣖</span> {usage}%"
    },

    // Memory
    "memory": {
        "format": "<span size='large'>󰍛</span> {}%"
    },

    // Disc
    "disk": {
        "interval": 120,
        "format": "<span size='large'></span> {percentage_used}%",
        "path": "/"
    }, 
    
    // Network
    "network": {
        "format": "<span size='large'>{icon}</span>",
        "format-icons": ["󰢼","󰢽","󰢾"],
        "format-disconnected": "󰞃",
        "tooltip-format-wifi": "{essid} ({signalStrength}%)",
        "tooltip-format-ethernet": "{ifname} ({ipaddr}/{cidr})",
        "max-length": 50,
    },

    // Battery
    "battery": {
        "format": "<span size='large'>{icon}</span> {capacity}%",
        "format-charging": " {capacity}%",
        "format-icons": ["󰂎", "󱊡", "󱊢", "󱊣"]
    },

    // Pulseaudio
    "pulseaudio": {
        "format": "<span size='120%'>{icon}</span> {volume}%",
        "format-muted": "󰝟 {format_source}",
        "format-source": "{volume}% ",
        "format-source-muted": "",
        "format-icons": {
            "headphone": "",
            "default": ["", "", ""]
        }
    },

    // Bluetooth
    "bluetooth": {
        "format": "<span size='medium'>󰂯</span>",
        "format-disabled": "",
        "format-off": "",
        "tooltip-format": "{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}: {device_address}",
        "on-click": "kitty -e bluetuith"
    }    
}
